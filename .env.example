# Database Server Microservice Configuration
# Copy this file to .env and update with your values

# ============================================
# Database Server Admin Credentials
# ============================================
# IMPORTANT: Change these in production!
DB_SERVER_ADMIN_USER=dbadmin
DB_SERVER_ADMIN_PASSWORD=dbadmin_secret_change_in_production

# ============================================
# PostgreSQL Configuration
# ============================================
DB_SERVER_PORT=5432
DB_SERVER_INIT_DB=postgres
POSTGRES_INITDB_ARGS=-E UTF8 --locale=C

# ============================================
# Redis Configuration
# ============================================
REDIS_SERVER_PORT=6379
REDIS_APPENDONLY=no
REDIS_MAXMEMORY=256mb
REDIS_MAXMEMORY_POLICY=allkeys-lru

# ============================================
# Docker Network Configuration
# ============================================
NGINX_NETWORK_NAME=nginx-network

# ============================================
# Project Databases (Optional - for auto-init)
# ============================================
# Uncomment and configure for automatic database creation:
# CRYPTO_AI_AGENT_DB_NAME=crypto_ai_agent
# CRYPTO_AI_AGENT_DB_USER=crypto
# CRYPTO_AI_AGENT_DB_PASSWORD=crypto_pass
