# Database Server Microservice Configuration
# Copy this file to .env and update with your values

# ============================================
# Database Server Admin Credentials
# ============================================
# IMPORTANT: Change these in production!
DB_SERVER_ADMIN_USER=
DB_SERVER_ADMIN_PASSWORD=

# ============================================
# PostgreSQL Configuration
# ============================================
DB_SERVER_PORT=
DB_SERVER_INIT_DB=
POSTGRES_INITDB_ARGS=

# ============================================
# Redis Configuration
# ============================================
REDIS_SERVER_PORT=
REDIS_APPENDONLY=
REDIS_MAXMEMORY=
REDIS_MAXMEMORY_POLICY=

# ============================================
# Docker Network Configuration
# ============================================
NGINX_NETWORK_NAME=

# ============================================
# Frontend Configuration (Web Interface)
# ============================================
# Domain for frontend (used by nginx add-domain script)
DOMAIN=
# Auth microservice URL (for admin login)
AUTH_SERVICE_URL=
# Frontend port (default: 3390)
FRONTEND_PORT=
